{
  "name": "kompose",
  "displayName": "kompose",
  "description": "",
  "version": "0.0.3",
  "publisher": "othy1010",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/othy1010/kompose-extension"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kompose.generate",
        "title": "Kompose The file",
        "icon": "$(circuit-board)"
      },
      {
        "command": "kompose.generateMultiple",
        "title": "Kompose The files",
        "icon": "$(circuit-board)"
      },
      {
        "command": "kompose.addDockerCompose",
        "title": "Add a File",
        "icon": "$(file-add)"
      },
      {
        "command": "kompose.deleteDockerCompose",
        "title": "Exclude Docker-Compose File from generation",
        "icon": "$(trash)"
      },
      {
        "command": "kompose.addOption",
        "title": "Add Kompose Option",
        "icon": "$(tag-add)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kompose.generate",
          "group": "navigation",
          "when": "resourceFilename =~ /^docker-compose(.*\\.y(a)?ml)?$/"
        }
      ],
      "view/title": [
        {
          "command": "kompose.addDockerCompose",
          "when": "view == komposeView"
        },
        {
          "command": "kompose.generateMultiple",
          "when": "view == komposeView ",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kompose.addDockerCompose",
          "when": "view == komposeView && viewItem == files",
          "group": "inline"
        },
        {
          "command": "kompose.deleteDockerCompose",
          "when": "view == komposeView && viewItem == dockerComposeFile",
          "group": "inline"
        },
        {
          "command": "kompose.addOption",
          "when": "view == komposeView && viewItem == options",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "komposeView",
        "contents": "Welcome to the Kompose Extension!\n[Enter your details](command:kompose.enterDetails)\n[Configure Kompose Extension](command:kompose.generate)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "komposeActivity",
          "title": "Kompose Your Files",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "komposeActivity": [
        {
          "id": "komposeView",
          "name": "Kompose Your Files"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
